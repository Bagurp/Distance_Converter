<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewGithub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Distance Converter \nhttps://github.com/Pugmark" />

        <LinearLayout
            android:id="@+id/LinearLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/EditTextValue"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:hint="Enter Value"
                android:inputType="numberDecimal"/>

            <TextView
                android:id="@+id/TextviewResult"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:layout_marginLeft="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LinearInner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Input Unit"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/RadioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/inch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Inch"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/foot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Foot"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/yard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Yard"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/mile1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Mile"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/centimeter1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Centimeter"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/meter1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Meter"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/Kilometer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Kilometer"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/NauMile1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Nautical Mile"
                        android:textSize="20dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearInner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Output Unit"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/RadioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/inch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Inch"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/foot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Foot"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/yard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Yard"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/mile2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Mile"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/centimeter2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Centimeter"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/meter2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Meter"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/Kilometer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Kilometer"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/NauMile2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Nautical Mile"
                        android:textSize="20dp" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/CalculateButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Convert"
            android:textSize="18dp"
            android:onClick="ConvertButtonClicked"/>
    </LinearLayout>
</ScrollView>
